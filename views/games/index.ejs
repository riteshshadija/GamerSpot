<%- include("../partials/header") %>
	<div class="container">
	<header class="jumbotron">
	<div class="container">
		<h1>Welcome to Gamerspot!</h1>
		<p>view the review of games from all over the world</p>
		<p>
		<a class="btn btn-primary btn-lg" href="/games/new">Add new Game</a>
		</p>
	</div>
	</header>
	<div class="row" style="display: flex; flex-wrap: wrap;">
    <div class="thumbnail">
		<% games.forEach(function(game){ %>
			<div class="col-md-12 col-sm-6">
				<!-- there are 12 units in 1 screen and each taking 3 units and when small in size each will take 6 units-->
			<!-- 	<div class="thumbnail">  -->
                <!-- <div class="col-md-4 col-sm-6"> -->
                  <img class="showimg" src="<%= game.image %>" style="float: right; width: 150px; height: 130px;">
                <!-- </div> -->

                    <div class="caption">
                        <h4 class="showname"><%= game.name %></h4>
                    </div>

                    <!-- <div class="col-md-8 col-sm-6"> -->
                        <h4><%= game.description %></h4>
                   <!--  </div> -->
					<p>
					<a href="/game/<%= game._id %>" class="btn btn-primary">More Info</a>
					</p>
				<!-- </div> -->
                <hr>
			</div>
		<% }); %>
    </div>
	</div>
</div>

<div class="text-center">
    <% if (pages && pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/games">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="disabled"><a>«</a></li>
        <% } else { %>
        <li><a href="/games?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/games?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/games?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/games?page=<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>
<%- include("../partials/footer") %>